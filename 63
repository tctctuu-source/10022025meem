import React from 'react';
import { ResultPoster } from '../types';
import { Trophy, Medal, Award } from 'lucide-react';

interface ResultPosterCardProps {
  poster: ResultPoster;
  className?: string;
}

const ResultPosterCard: React.FC<ResultPosterCardProps> = ({ poster, className = '' }) => {
  const alignmentClass = {
    left: 'text-left',
    center: 'text-center',
    right: 'text-right',
  }[poster.text_alignment];

  const winnerInfo = [
    { name: poster.winner1_name, team: poster.winner1_team, icon: Trophy, position: '1st Place', color: 'text-amber-400' },
    { name: poster.winner2_name, team: poster.winner2_team, icon: Medal, position: '2nd Place', color: 'text-slate-400' },
    { name: poster.winner3_name, team: poster.winner3_team, icon: Award, position: '3rd Place', color: 'text-yellow-600' },
  ].filter(w => w.name);

  return (
    <div
      className={`w-full h-full p-6 sm:p-8 flex flex-col rounded-lg shadow-lg border border-black/10 ${alignmentClass} ${className}`}
      style={{ backgroundColor: poster.background_color }}
    >
      <header className="mb-6">
        <p className="text-sm font-semibold uppercase tracking-wider" style={{ color: poster.title_color, opacity: 0.7 }}>
          {poster.category}
        </p>
        <h2
          className="font-bold break-words"
          style={{ fontSize: `${poster.title_font_size}px`, color: poster.title_color, lineHeight: 1.2 }}
        >
          {poster.competition_name}
        </h2>
      </header>

      <main className="flex-grow flex flex-col justify-center space-y-4">
        {winnerInfo.map((winner, index) => (
          <div key={index} className="flex-shrink-0">
            <winner.icon className={`mx-auto w-8 h-8 mb-1 ${winner.color}`} />
            <h3 className="text-lg font-bold" style={{ color: poster.title_color }}>
              {winner.name}
            </h3>
            {winner.team && (
              <p className="text-sm" style={{ color: poster.title_color, opacity: 0.8 }}>
                {winner.team}
              </p>
            )}
          </div>
        ))}
      </main>

      <footer className="mt-6 pt-4 border-t border-dashed" style={{ borderColor: poster.title_color, opacity: 0.3 }}>
        <p className="text-xs font-semibold" style={{ color: poster.title_color, opacity: 0.9 }}>
          SSF Muhimmath Daawa Sector
        </p>
      </footer>
    </div>
  );
};

export default ResultPosterCard;
